@model RecupereJa.ViewModels.ItemViewModel

@{
    ViewData["Title"] = "Excluir item";
}

<div class="row">
    <div class="col-md-8 offset-md-2">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h4><i class="fas fa-exclamation-triangle"></i> Confirmar Exclusão</h4>
            </div>
            <div class="card-body">
                <div class="alert alert-warning">
                    <i class="fas fa-warning"></i>
                    <strong>Atenção!</strong> Esta ação não pode ser desfeita. Você tem certeza que deseja excluir este item?
                </div>

                <div class="row mb-3">
                    <div class="col-md-8">
                        <h5 class="@(Model.Status ? "text-decoration-line-through text-muted" : "")">
                            @Model.Titulo
                        </h5>
                    </div>
                    <div class="col-md-4 text-end">
                        <span class="badge bg-@(Model.Status ? "success" : "warning")">
                            @(Model.Status ? "Entregue ao dono" : "Não entregue")
                        </span>
                    </div>
                </div>

                @if (Model.TemDescricao)
                {
                    <div class="mb-3">
                        <strong>Descrição:</strong>
                        <p class="@(Model.Status ? "text-muted" : "")">@Model.Descricao</p>
                    </div>
                }

                <div class="row text-muted">
                    <div class="col-md-6">
                        <small><strong>Encontrado em:</strong> @Model.DataEncontrado</small>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <form asp-action="Delete" method="post" class="d-inline">
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end">
                        <a asp-action="Index" class="btn btn-secondary me-md-2">
                            <i class="fas fa-arrow-left"></i> Cancelar
                        </a>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-info me-md-2">
                            <i class="fas fa-eye"></i> Ver Detalhes
                        </a>
                        <button type="submit" class="btn btn-danger">
                            <i class="fas fa-trash"></i> Confirmar Exclusão
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
