@model RecupereJa.ViewModel.ItemViewModel

@{
	ViewData["Title"] = "Detalhes do item";
}

<div class="row">
	<div class="col-md-8 offset-md-2">
		<div class="card">
			<div class="card-header d-flex justify-content-between align-items-center">
				<h4><i class="fas fa-eye"></i> Detalhes do item</h4>
				<span class="badge bg-@(Model.Status ? "success" : "warning") fs-6">
					@(Model.Status ? "Entregue ao dono" : "Não entregue")
				</span>
			</div>

			<div class="card-body">
				<div class="row mb-4">
					<div class="col-md-8">
						<h2 class="@(Model.Status ? "text-decoration-line-through text-muted" : "")">
							@Model.Titulo
						</h2>
					</div>
				</div>

				@if (Model.TemDescricao)
				{
					<div class="mb-4">
						<h5>Descrição:</h5>
						<p class="@(Model.Status ? "text-muted" : "")">@Model.Descricao</p>
					</div>
				}

				<div class="row">
					<div class="col-md-6">
						<div class="card bg-light">
							<div class="card-body text-center">
								<i class="fas fa-calendar-plus fa-2x text-primary mb-2"></i>
								<h6>Data em que foi encontrado</h6>
								<p class="mb-0">@Model.DataEncontrado</p>
							</div>
						</div>
					</div>
				</div>

				@if (Model.Status)
				{
					<div class="alert alert-success mt-4">
						<i class="fas fa-check-circle"></i>
						<strong>Ótimo!</strong> Este item já foi devolvido ao dono.
					</div>
				}
			</div>

			<div class="card-footer">
				<div class="d-grid gap-2 d-md-flex justify-content-md-end">
					<a asp-action="Index" class="btn btn-secondary me-md-2">
						<i class="fas fa-arrow-left"></i> Voltar para Lista
					</a>

					<form asp-action="ToggleConcluida" asp-route-id="@Model.Id" method="post" class="d-inline">
						<button type="submit" class="btn btn-@(Model.Status ? "warning" : "success") me-md-2">
							<i class="fas fa-sync-alt"></i>
							@(Model.Status ? "Marcar como não entregue" : "Marcar como entregue")
						</button>
					</form>

					<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning me-md-2">
						<i class="fas fa-edit"></i> Editar
					</a>

					<a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
						<i class="fas fa-trash"></i> Excluir
					</a>
				</div>
			</div>
		</div>
	</div>
</div>
