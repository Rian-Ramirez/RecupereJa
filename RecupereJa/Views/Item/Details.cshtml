@model RecupereJa.ViewModel.ItemViewModel

@{
    ViewData["Title"] = "Detalhes";
}

<h2>Detalhes do Item</h2>

<div>
    <h4>@Model.Titulo</h4>
    <p><strong>Descrição:</strong> @Model.Descricao</p>
    <p><strong>Data encontrado:</strong> @Model.DataEncontrado?.ToString("dd/MM/yyyy HH:mm")</p>
    <p><strong>Status:</strong> @(Model.Status ? "Com dono" : "Perdido")</p>
</div>

<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Editar</a>
<a asp-action="Index" class="btn btn-secondary">Voltar</a>
