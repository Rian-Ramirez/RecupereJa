@using RecupereJa.Enums
@model IEnumerable<RecupereJa.ViewModel.ItemViewModel>

@{
    ViewData["Title"] = "Itens";
}

<h2>Lista de Itens</h2>

<p>
    <a asp-action="Create" class="btn btn-success">Novo Item</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Título</th>
            <th>Descrição</th>
            <th>Data Encontrado</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Titulo</td>
                <td>@item.Descricao</td>
                <td>@item.DataEncontrado?.ToString("dd/MM/yyyy HH:mm")</td>
                <td>@(item.Status == ItemStatusEnum.Encontrado ? "Com dono" : "Perdido")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
