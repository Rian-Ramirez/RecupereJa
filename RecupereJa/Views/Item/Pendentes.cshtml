@{
}
@model List<RecupereJa.Models.Item>

<h2>Itens Pendentes</h2>

<table>
	<thead>
		<tr>
			<th>Título</th>
			<th>Descrição</th>
			<th>Ação</th>
		</tr>
	</thead>
	<tbody>
		@foreach (var item in Model)
		{
			<tr>
				<td>@item.Titulo</td>
				<td>@item.Descricao</td>
				<td>
					<form method="post" asp-action="Aprovar">
						<input type="hidden" name="id" value="@item.Id" />
						<button type="submit">Aprovar</button>
					</form>
				</td>
			</tr>
		}
	</tbody>
</table>
