@using RecupereJa.Enums
@model RecupereJa.Models.Item
<div class="card h-100 shadow-sm border-0">
    <img src="@(String.IsNullOrEmpty(Model.ImagemUrl) ? Url.Content("~/images/placeholder-item.png") : Model.ImagemUrl)" class="card-img-top" alt="@Model.Titulo" style="object-fit:cover; height:180px;">
    <div class="card-body d-flex flex-column">
        <h6 class="card-title">@Model.Titulo</h6>
        @if (Model.Status == ItemStatusEnum.Perdido)
        {
            <span class="badge bg-danger">Perdido</span>
        }
        else if (Model.Status == ItemStatusEnum.Encontrado)
        {
            <span class="badge bg-success">Encontrado</span>
        }
        <a href="@Url.Action("Details", "Item", new { id = Model.Id })" class="btn btn-warning mt-auto w-100">Visualizar</a>
    </div>
</div>