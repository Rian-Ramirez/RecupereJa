@model RecupereJa.ViewModel.LoginViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Login - Recupere Já</title>
    <style>
        * {
            box-sizing: border-box;
        }

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Roboto', sans-serif;
        }

        /* Fundo degradê com blur */
        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom right, #d0eaff, #0077cc);
            filter: blur(10px);
            z-index: -1;
        }

        .wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 40px 20px;
        }

        .container {
            background-color: white;
            padding: 30px 25px;
            border-radius: 12px;
            max-width: 400px;
            width: 100%;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        header {
            background-color: white;
            color: #0066cc;
            padding: 10px;
            text-align: center;
            border-radius: 8px;
            font-size: 18px;
            margin-bottom: 25px;
        }

            header h2 {
                margin: 0;
                font-size: 18px;
            }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
            width: 100%;
            margin-bottom: 15px;
        }

        button {
            padding: 10px;
            background-color: #ffffff;
            color: #0066cc;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            width: 50%;
            transition: background-color 0.3s;
            display: block;
            margin: 20px auto 0 auto;
        }

            button:hover {
                background-color: #005f73;
            }
    </style>
</head>
<body>
    <div class="background"></div>
    <div class="wrapper">
        <div class="container">
            <header>
                <h2><b>Login</b></h2>
            </header>

            <<form asp-controller="Login" asp-action="Index" method="post">>
                <label for="email">Email:</label>
                <input asp-for="Identificador " name="identificador" placeholder="Nome de usuário ou E-mail" required>

                <label for="senha">Senha:</label>
                <input type="password" id="senha" name="senha" placeholder="Digite sua senha" required>

                <button type="submit">Entrar</button>
            </form>
            @if (ViewBag.Mensagem != null)
            {   
                <p style="color:red">@ViewBag.Mensagem</p>
            }
        </div>
    </div>
</body>
</html>
