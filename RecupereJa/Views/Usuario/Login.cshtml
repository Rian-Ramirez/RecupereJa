@model RecupereJa.ViewModel.LoginViewModel

@{
    ViewData["BodyClass"] = "login-page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    body.login-page {
        background-color: #f5f5f5 !important; /* ou #ffe600 para amarelo estilo Mercado Livre */
    }

        body.login-page .container {
            max-width: none;
            padding: 0;
        }
</style>

<div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">
    <div class="card shadow-lg border-0" style="max-width: 420px; width: 100%; border-radius: 12px;">
        <div class="card-body p-4">
            <div class="text-center mb-4">
                <!-- Logo -->
                <img src="~/Images/RecupereJa.jpg" alt="Logo RecupereJá" style="height: 70px;" />
                <h4 class="mt-3 fw-bold" style="color: #333;">Acesse sua conta</h4>
            </div>

            <form method="post" asp-controller="Usuario" asp-action="Login">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label fw-bold">E-mail ou Identificador</label>
                    <input class="form-control form-control-lg"
                           name="identificadorOuEmail"
                           placeholder="Digite seu e-mail ou identificador"
                           required />
                </div>

                <div class="mb-3">
                    <label class="form-label fw-bold">Senha</label>
                    <input class="form-control form-control-lg"
                           type="password"
                           name="senha"
                           placeholder="Digite sua senha"
                           required />
                </div>

                <button class="btn w-100 py-2 mb-2"
                        type="submit"
                        style="background-color: #ffe600; border: none; font-weight: bold; font-size: 1.1rem; border-radius: 8px;">
                    Entrar
                </button>
            </form>

            <div class="text-center mt-3">
                <span class="text-muted">Não tem conta?</span>
                <a asp-action="Registrar" class="fw-bold" style="color: #3483fa; text-decoration: none;">
                    Cadastre-se
                </a>
            </div>
        </div>
    </div>
</div>