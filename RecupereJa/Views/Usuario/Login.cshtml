@model RecupereJa.ViewModel.LoginViewModel

<style>
    body {
        background-color: #808080; /* fundo cinza */
        color: #b30000; /* vermelho escuro */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .login-container {
        max-width: 400px;
        margin: 80px auto;
        padding: 30px;
        background-color: #4d4d4d; /* cinza escuro */
        border-radius: 10px;
        box-shadow: 0 0 20px rgba(179, 0, 0, 0.4); /* sombra vermelho escuro */
    }

        .login-container h2 {   
            text-align: center;
            color: #b30000; /* vermelho escuro */
            margin-bottom: 30px;
        }

    .form-control {
        background-color: #808080;
        border: 1px solid #b30000;
        color: #b30000;
    }

        .form-control:focus {
            box-shadow: 0 0 5px #b30000;
            border-color: #b30000;
            background-color: #808080;
            color: #b30000;
        }

    label {
        color: #b30000;
    }

    .btn-primary {
        background-color: #b30000;
        border: none;
        color: #fff;
        font-weight: bold;
        transition: 0.3s;
    }

        .btn-primary:hover {
            background-color: #800000;
            color: #fff;
        }

    .text-danger {
        color: #ff6666; /* um vermelho mais claro só para mensagens de erro */
    }
</style>

<div class="login-container">
    <h2>Login</h2>

    <form asp-action="Login" method="post">
        <div class="form-group">
            <label asp-for="Username"></label>
            <input asp-for="Username" class="form-control" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>

        <div class="form-group mt-3">
            <label asp-for="Password"></label>
            <input asp-for="Password" class="form-control" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>

        <div class="d-grid gap-2 mt-4">
            <button type="submit" class="btn btn-primary">Entrar</button>
        </div>
    </form>
</div>