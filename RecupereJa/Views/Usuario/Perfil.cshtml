@model RecupereJa.ViewModel.PerfilUsuarioViewModel

<div class="profile-container">
    <div class="sidebar">
        <img src="@Model.PhotoUrl" class="profile-photo" alt="Profile Photo" />
        <h2>@Model.Nome</h2>
        <p>@Model.Cidade</p>
        <p class="rating">⭐ @Model.Rating</p>

        <div class="contact-info">
            <p>📞 <a href="tel:@Model.Telefone">@Model.Telefone</a></p>
            <p>📧 <a href="mailto:@Model.Email">@Model.Email</a></p>
        </div>
    </div>

    <div class="main-content">


        <h3>Basic Information</h3>
        <p>
            <strong>Birthday:</strong>
            @Model.Birthday.ToString("MMMM d, yyyy")
        </p>
        <p><strong>Gender:</strong> @Model.Gender</p>
    </div>
</div>

