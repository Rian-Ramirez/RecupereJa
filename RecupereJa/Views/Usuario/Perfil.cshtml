@model RecupereJa.ViewModel.PerfilUsuarioViewModel

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Perfil - Recupere Já</title>
    <style>
        * {
            box-sizing: border-box;
        }

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Roboto', sans-serif;
        }

        /* Fundo degradê com blur */
        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom right, #d0eaff, #0077cc);
            filter: blur(10px);
            z-index: -1;
        }

        .wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 40px 20px;
        }

        .container {
            background-color: white;
            padding: 30px 25px;
            border-radius: 12px;
            max-width: 450px;
            width: 100%;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
            text-align: center;
        }

        header {
            background-color: white;
            color: #0066cc;
            padding: 10px;
            text-align: center;
            border-radius: 8px;
            font-size: 18px;
            margin-bottom: 25px;
        }

            header h2 {
                margin: 0;
                font-size: 18px;
            }

        .profile-pic {
            width: 100px;
            height: 100px;
            border-radius: 50%;
            object-fit: cover;
            border: 3px solid #0066cc;
            margin-bottom: 10px;
        }

        .profile-info p {
            margin: 8px 0;
            font-size: 1em;
            text-align: left;
        }

        .styled-button {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            background-color: #fff;
            font-size: 1em;
            cursor: pointer;
            width: 100%;
            transition: 0.3s;
        }

            .styled-button:hover {
                border-color: #0066cc;
                background-color: #f0f8ff;
            }

        .edit-fields {
            display: none;
            margin-top: 20px;
            text-align: left;
        }

            .edit-fields input {
                padding: 8px;
                border: 1px solid #ccc;
                border-radius: 5px;
                font-size: 1em;
                width: 100%;
                margin-bottom: 10px;
            }

        /* Campo de upload customizado */
        .file-input-wrapper {
            position: relative;
            width: 100%;
            border: 1px solid #ccc;
            border-radius: 5px;
            overflow: hidden;
            display: flex;
            align-items: center;
            margin-bottom: 10px;
        }

            .file-input-wrapper input[type="file"] {
                display: none;
            }

            .file-input-wrapper span {
                flex: 1;
                padding: 8px;
                color: #666;
            }

            .file-input-wrapper button {
                background-color: #0066cc;
                color: white;
                border: none;
                padding: 8px 12px;
                font-size: 1.2em;
                cursor: pointer;
            }

                .file-input-wrapper button:hover {
                    background-color: #004d99;
                }
    </style>
</head>
<body>
    <div class="background"></div>
    <div class="wrapper">
        <div class="container">
            <header>
                <h2><b>Meu Perfil</b></h2>
            </header>

            <!-- Foto de perfil -->
            <img src="assets/steve.jpg" alt="Foto de Perfil" class="profile-pic">

            <!-- Informações -->
            <div class="profile-info">
                <p><strong>Nome Completo:</strong> João Silva</p>
                <p><strong>Nome de Usuário:</strong> joaosilva</p>
                <p><strong>Telefone:</strong> (11) 98765-4321</p>
                <p><strong>Email:</strong> joaosilva@gmail.com</p>
                <p><strong>Localização:</strong> São Paulo, SP</p>
            </div>

            <!-- Botão para editar -->
            <button class="styled-button" onclick="toggleEdit()">Editar Perfil</button>

            <!-- Campos para edição -->
            <div class="edit-fields" id="editSection">

                <!-- Campo de foto customizado -->
                <div class="file-input-wrapper">
                    <span>Escolher nova foto...</span>
                    <input type="file" id="fotoPerfil" accept="image/*" onchange="updateFileName()">
                    <button type="button" onclick="document.getElementById('fotoPerfil').click()">+</button>
                </div>

                <input type="text" placeholder="Nome Completo">
                <input type="text" placeholder="Nome de Usuário">
                <input type="tel" placeholder="(XX) XXXXX-XXXX">
                <input type="text" placeholder="exemplo@exemplo.com">
                <input type="text" placeholder="Cidade, Estado">

                <button class="styled-button">Salvar Alterações</button>
            </div>
        </div>
    </div>

    <script>
        function toggleEdit() {
          document.getElementById("editSection").style.display = "block";
        }

        function updateFileName() {
          const fileInput = document.getElementById("fotoPerfil");
          const fileName = fileInput.files.length > 0 ? fileInput.files[0].name : "Escolher nova foto...";
          document.querySelector(".file-input-wrapper span").textContent = fileName;
        }
    </script>
</body>
</html>