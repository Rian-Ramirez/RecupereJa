@model RecupereJa.Models.Usuario

@{
    ViewData["Title"] = "Registrar";
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>Cadastro - Recupere Já</title>
    <style>
        * {
            box-sizing: border-box;
        }

        html, body {
            margin: 0;
            padding: 0;
            height: 100%;
            font-family: 'Roboto', sans-serif;
        }

        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to bottom right, #d0eaff, #0077cc);
            filter: blur(10px);
            z-index: -1;
        }

        .wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 40px 20px;
        }

        .container {
            background-color: white;
            padding: 30px 25px;
            border-radius: 12px;
            max-width: 600px;
            width: 100%;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        header {
            background-color: white;
            color: #0066cc;
            padding: 10px;
            text-align: center;
            border-radius: 8px;
            font-size: 30px;
            margin-bottom: 25px;
        }

            header h2 {
                margin: 0;
                font-size: 18px;
            }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
            width: 100%;
            margin-bottom: 15px;
        }

        button {
            padding: 10px;
            background-color: white;
            color: #0066cc;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            width: 50%;
            transition: background-color 0.3s;
            display: block;
            margin: 20px auto 0 auto;
        }

            button:hover {
                background-color: #005f73;
            }
    </style>
</head>
<body>
    <div class="wrapper">
        <div class="container">
            <header>
                <h2>Criar Conta</h2>
            </header>

            <!-- Exibir erros de validação -->
            <div asp-validation-summary="All" class="text-danger"></div>

            <form method="post" asp-controller="Usuario" asp-action="Registrar" enctype="multipart/form-data">
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    <label class="form-label">Nome</label>
                    <input class="form-control" asp-for="Nome" required />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input class="form-control" asp-for="Email" type="email" required />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Identificador</label>
                    <input class="form-control" asp-for="Identificador" required />
                    <span asp-validation-for="Identificador" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Telefone</label>
                    <input class="form-control" asp-for="Telefone" type="tel" required />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label class="form-label">Senha</label>
                    <input class="form-control" asp-for="Senha" type="password" required />
                    <span asp-validation-for="Senha" class="text-danger"></span>
                </div>

                <!-- Upload da foto -->
                <div class="mb-3">
                    <label class="form-label">Foto de Perfil</label>
                    <input class="form-control" type="file" name="foto" accept="image/*" />
                </div>

                <button id="btnCadastrar" class="btn btn-success w-100" type="submit">Registrar</button>
            </form>
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            const btnCadastrar = document.getElementById("btnCadastrar");
            if (btnCadastrar) {
                btnCadastrar.addEventListener("click", () => {
                    alert("Você concluiu seu cadastro!");
                });
            }
        });
    </script>
</body>
</html>