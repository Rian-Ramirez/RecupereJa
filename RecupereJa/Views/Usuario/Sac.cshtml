@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <title>SAC - Recupere Já</title>

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">

    <style>
        /* Estilo geral do site */
        body {
            margin: 0;
            font-family: Arial, sans-serif;
            background-color: #f0f2f5;
            color: #333;
        }

        header {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            background-color: #ffc107;
            color: #212529;
            padding: 10px 20px;
            width: 68%;
            height: 70px;
            position: relative;
            display: flex;
            justify-content: center;
            align-items: center;
            box-sizing: border-box;
            margin: 0 auto;
        }


            header h1 {
                position: absolute;
                left: 50%;
                transform: translateX(-50%);
                margin: 0;
                font-size: 26px;
            }

        nav {
            display: flex;
            gap: 8px;
            font-size: 12px;
        }

        .menu-btn {
            color: white;
            text-decoration: none;
            font-weight: bold;
            border: 2px solid white;
            border-radius: 5px;
            background-color: #379bff;
            width: 60px;
            height: 28px;
            display: flex;
            align-items: center;
            justify-content: center;
            gap: 3px;
            font-size: 13px;
        }

            .menu-btn:hover {
                background-color: white;
                color: #0066cc;
            }

        .dropdown {
            position: relative;
            display: inline-block;
        }

        .dropdown-content {
            display: none;
            position: absolute;
            background-color: white;
            min-width: 140px;
            box-shadow: 0px 8px 16px rgba(0,0,0,0.2);
            z-index: 1;
            border-radius: 5px;
        }

            .dropdown-content a {
                padding: 10px 15px;
                display: block;
                text-decoration: none;
                color: #333;
                font-weight: normal;
            }

                .dropdown-content a:hover {
                    background-color: #f2f2f2;
                }

        .dropdown:hover .dropdown-content {
            display: block;
        }

        .background {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: #f5f5f5;
            filter: blur(10px);
            z-index: -1;
        }

        .wrapper {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 80vh;
            padding: 40px 20px;
        }

        .container {
            background-color: white;
            padding: 30px 25px;
            border-radius: 12px;
            max-width: 500px;
            width: 100%;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.2);
        }

        .sac-header {
            background-color: #ffffff;
            color: #212529;
            padding: 10px;
            text-align: center;
            border-radius: 8px;
            font-size: 18px;
            margin-bottom: 25px;
        }

        label {
            font-weight: bold;
            display: block;
            margin-bottom: 5px;
        }

        input, textarea {
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 5px;
            font-size: 1em;
            width: 100%;
            margin-bottom: 15px;
            resize: vertical;
        }

        textarea {
            min-height: 100px;
        }

        button {
            padding: 10px;
            background-color: #ffe600;
            color: #212529;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            font-size: 1em;
            width: 50%;
            transition: background-color 0.3s;
            display: block;
            margin: 20px auto 0 auto;
        }

            button:hover {
                background-color: #005f73;
            }
    </style>
</head>
<body>
    <header>
        <h1 class="TituloEmpresa">Recupere Já</h1>
    </header>

    <div class="background"></div>

    <div class="wrapper">
        <div class="container">
            <div class="sac-header">
                <h2><b>Fale com o SAC</b></h2>
            </div>

            <form method="post" asp-controller="Usuario" asp-action="Sac">

                <label for="nome">Nome:</label>
                <input type="text" id="nome" name="nome" placeholder="Digite seu nome" required>

                <label for="email">Email:</label>
                <input type="email" id="email" name="email" placeholder="exemplo@exemplo.com" required>

                <label for="assunto">Assunto:</label>
                <input type="text" id="assunto" name="assunto" placeholder="Qual é o assunto?" required>

                <label for="mensagem">Mensagem:</label>
                <textarea id="mensagem" name="mensagem" placeholder="Escreva sua mensagem..." required></textarea>

                <button type="submit">Enviar mensagem</button>
            </form>

            @if (TempData["Sucesso"] != null)
            {
                <p style="color:green">@TempData["Sucesso"]</p>
            }

            @if (TempData["Erro"] != null)
            {
                <p style="color:red">@TempData["Erro"]</p>
            }
        </div>
    </div>

    <script>
        document.addEventListener("DOMContentLoaded", () => {
            console.log("Página carregada e pronta 🚀");
        });
    </script>
</body>
</html>